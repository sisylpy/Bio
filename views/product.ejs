</head>


<body>

<div class="esjy-col">
    <%- include adminNav %>
    <div class="subNav bg-dark ">
        <a class="navitem-name" href="javascript:;">货品</a>
        <div class="subitems" id="myTabs">
            <a href="#product_sale" id="brand-tab" role="tab" data-toggle="pill" aria-controls="brand"
               class="showlist <% if(type == 0){ %>active  <% } %>"
               aria-expanded="true" data-type="0">商品</a>
            <a href="#trail_product" id="agency-tab" role="tab" data-toggle="pill" aria-controls="agency"
               class="showlist <% if(type == 1){ %>active<% } %>"
               data-type="1">试用品</a>
            <button type="button" class="btn btn-dark add-btn addNew" id="addNewProduct">
                <a href="javascript:;"  id="showAddProduct" data-type="0">上传商品</a>
            </button>
            <button type="button" class="btn btn-dark add-btn addNew" id="addNewTrailProduct">
                <a href="javascript:;"  id="showAddProduct" data-type="1">上传试用品</a>
            </button>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="bio row">
        <div class="left-list col-sm-3">
            <div class="block10"></div>
            <div class="text-center">
                <span>经销商</span>
            </div>
            <div class="block20"></div>
            <!-- <div class="form-group has-success has-feedback">
                 <input type="text" class="form-control" id="inputSearch" aria-describedby="inputSearchStatus"/>
                 <span class="glyphicon glyphicon-search form-control-feedback" aria-hidden="true"></span>
             </div>-->
            <div style="height:500px;overflow-y:auto;">
            <table class="table table-condensed text-center table-hover" id="agency">
                <thead>
                <tr>
                    <th>序号</th>
                    <th>经销商名称</th>
                    <th>经销商状态</th>
                </tr>
                </thead>
                <tbody>
                <% agencyRes.forEach(function(agency,index){ %>
                <tr class="handle" data-id="<%= agency.id %>">
                    <th><%= index+1 %></th>
                    <td><%= agency.agencyName %></td>
                    <td>
                        <% if(agency.agencyStatus == 'Y'){ %>
                        营业中
                        <% }else{ %>
                        停业
                        <% } %>
                    </td>
                </tr>
                <% }) %>
                </tbody>
            </table>
            </div>
        </div>
        <div class="col-sm-9">
            <div class="block20"></div>
            <div class="tab-content" id="tab-content">
                <div class="data-list tab-pane fade <% if(type == 0){ %>in active<% } %>" id="product_sale">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>序号</th>
                            <th>品牌</th>
                            <th>货号</th>
                            <th class="has-success has-feedback product-click-sort" style="cursor:pointer">
                                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                货物名称
                            </th>
                            <th>库存</th>
                            <th>规格</th>
                            <th>更新日期</th>
                            <!--<th>操作</th>-->
                        </tr>
                        </thead>
                        <tbody class="text-left" id="product_number_list">
                        <% productsRes.forEach(function(product,index){ %>
                        <tr>
                            <th scope="row"><%= index+1 %></th>
                            <td><%= product.manufacturer_name %></td>
                            <td><%= product.item_name %></td>
                            <td><%= product.goods_name %></td>
                            <td><%= product.stock %></td>
                            <td><%= product.goods_standard %></td>
                            <td><%= product.update_time %></td>
                            <!--<td>
                                <a class="text-primary" data-toggle="modal" data-target="#productNameModel"
                                   data-id="<%= product.id %>" data-name="<%= product.goods_name %>"
                                   href="javascript:;">修改</a>
                                <a class="delete_product text-primary" href="javascript:;" data-id="<%= product.id %>">删除</a>&ndash;&gt;
                                <button id="edit-btn" type="button" class="btn btn-secondary">
                                    <a data-toggle="modal" data-target="#productNameModel" data-id="<%= product.id %>" data-name="<%= product.goods_name %>"  href="javascript:;" target="_blank">修改</a>
                                </button>
                                <button id="delate-btn" type="button" class="btn btn-dark">
                                    <a class="delete_product" data-id="<%= product.id %>" href="javascript:;" target="_blank">删除</a>
                                </button>
                            </td>-->
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation">
                        <ul class="pagination pull-right">
                            <li <% if(currentPage == 1){%> class="disabled" <%}%>>
                                <a href="javascript:;" class="page" data-page="1" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <% pageList.forEach(function(page){%>
                            <li <% if(currentPage == page){%> class="active" <%}%>>
                                <a href="javascript:;" class="page" data-page="<%=page%>">
                                    <%=page%>
                                    <% if(currentPage == page){%>
                                    <span class="sr-only">(current)</span>
                                    <%}%>
                                </a>
                            </li>
                            <%})%>
                            <li <% if(currentPage == pageList.length){%> class="disabled" <%}%>>
                                <a href="javascript:;" class="page" data-page="<%=pageList.length%>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="data-list tab-pane fade <% if(type == 1){ %>in active<% } %>" id="trail_product">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>序号</th>
                            <th>品牌</th>
                            <th>货号</th>
                            <th class="has-success has-feedback trailProduct-click-sort" style="cursor:pointer">
                                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                货物名称
                            </th>
                            <th>库存</th>
                            <th>规格</th>
                            <th>更新日期</th>
                            <!--<th>操作</th>-->
                        </tr>
                        </thead>
                        <tbody class="text-left" id="product_pdf_list">
                        <% trailProductsRes.forEach(function(trailProduct,index){ %>
                        <tr>
                            <th scope="row"><%= index+1 %></th>
                            <td><%= trailProduct.manufacturer_name %></td>
                            <td><%= trailProduct.item_name %></td>
                            <td><%= trailProduct.goods_name %></td>
                            <td><%= trailProduct.sample_amount %></td>
                            <td><%= trailProduct.goods_standard %></td>
                            <td><%= trailProduct.update_time %></td>
                            <!--<td>
                                <a class="modify text-primary" data-toggle="modal" data-target="#productNameModel"
                                   data-name="<%= trailProduct.goods_name %>" href="javascript:;">修改</a>
                                <a class="delete_trailproduct text-primary" href="javascript:;"
                                   data-id="<%= trailProduct.id %>">删除</a>
                                <button id="edit-btn" type="button" class="btn btn-secondary">
                                    <a data-toggle="modal" data-target="#productNameModel" data-id="<%= trailProduct.id %>" data-name="<%= trailProduct.goods_name %>"  href="javascript:;" target="_blank">修改</a>
                                </button>
                                <button id="delate-btn" type="button" class="btn btn-dark">
                                    <a class="delete_product" data-id="<%= trailProduct.id %>" href="javascript:;" target="_blank">删除</a>
                                </button>
                            </td>-->
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation">
                        <ul class="pagination pull-right">
                            <li <% if(currentPage == 1){%> class="disabled" <%}%>>
                                <a href="javascript:;" class="page" data-page="1" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <% pageList.forEach(function(page){%>
                            <li <% if(currentPage == page){%> class="active" <%}%>>
                                <a href="javascript:;" class="page" data-page="<%=page%>">
                                    <%=page%>
                                    <% if(currentPage == page){%>
                                    <span class="sr-only">(current)</span>
                                    <%}%>
                                </a>
                            </li>
                            <%})%>
                            <li <% if(currentPage == totalPage){%> class="disabled" <%}%>>
                                <a href="javascript:;" class="page" data-page="<%=totalPage%>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 修改商品名称 -->
<div class="modal fade" id="productNameModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="exampleModalLabel">修改商品名称</h4>
                <input type="hidden" name="product_id" value=""/>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">商品名称:</label>
                        <input type="text" class="form-control" name="product_name" id="recipient-name">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="modify_product_name">修改</button>
            </div>
        </div>
    </div>
</div>
<!-- 添加经销商 -->
<div class="modal fade" id="agencyNameModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="exampleModalLabel">添加新经销商</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">经销商名称:</label>
                        <input type="text" class="form-control" name="agencyName" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">经销商状态:</label>
                        <select class="form-control" name="agencyStatus">
                            <option value="Y">营业中</option>
                            <option value="N">停业中</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="add_agency">确认</button>
            </div>
        </div>
    </div>
</div>
<!-- 选择品牌 -->
<script type="text/javascript">
    $(function () {
        var curr_agency_id = $("#agency tbody tr:first").data('id');
        var type = 0;
        var pageNow = 1;
        var order = {product:'asc',trailProduct:'asc'};
        var list_id = {
            0: 'product_number_list',
            1: 'product_pdf_list'
        };
        $("#tab-content").load("/admin/product?agency_id=" + curr_agency_id + "&type=" + type + " #tab-content>div",function () {
            for(var key in order){
                if(order[key] == 'asc'){
                    $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-up');
                }else{
                    $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-down');
                }
            }
        });
        $('#myTabs a.showlist').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
            $(this).addClass('active').siblings('a').removeClass('active');
            type = $(this).data('type');
            var orderNow;
            if(type == 0){
                orderNow = order.product;
            }else{
                orderNow = order.trailProduct;
            }
            $("#tab-content").load("/admin/product?order="+order+"&agency_id=" + curr_agency_id + "&type=" + type + " #tab-content>div",function(){
                for(var key in order){
                    if(order[key] == 'asc'){
                        $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-up');
                    }else{
                        $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-down');
                    }
                }
            });
        });
        $(document).on('click','.page',function (e) {
            var current_page = $(this).data('page');
            pageNow = current_page;
            var orderNow;
            if(type == 0){
                orderNow = order.product;
            }else{
                orderNow = order.trailProduct;
            }
            window.history.pushState(null,null,"/admin/product?order="+orderNow+"&current_page="+current_page+"&agency_id=" + curr_agency_id + "&type=" + type);
            $("#tab-content").load("/admin/product?order="+orderNow+"&current_page="+current_page+"&agency_id=" + curr_agency_id + "&type=" + type + " #tab-content>div",function () {
                for(var key in order){
                    if(order[key] == 'asc'){
                        $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-up');
                    }else{
                        $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-down');
                    }
                }
            });
        });

        $(document).on("click",".product-click-sort",function(){
            if(order.product == 'asc'){
                order.product = 'desc';
            }else{
                order.product = 'asc';
            }
            $("#tab-content").load("/admin/product?order="+order.product+"&current_page="+pageNow+"&agency_id="+curr_agency_id+"&type="+type+" #tab-content>div",function () {
                if(order.product == 'asc'){
                    $(".product-click-sort").find('span').addClass('glyphicon-chevron-up');
                }else{
                    $(".product-click-sort").find('span').addClass('glyphicon-chevron-down');
                }
            });
        })
        $(document).on("click",".trailProduct-click-sort",function(){
            if(order.trailProduct == 'asc'){
                order.trailProduct = 'desc';
            }else{
                order.trailProduct = 'asc';
            }
            $("#tab-content").load("/admin/product?order="+order.trailProduct+"&current_page="+pageNow+"&agency_id="+curr_agency_id+"&type="+type+" #tab-content>div",function () {
                if(order.trailProduct == 'asc'){
                    $(".trailProduct-click-sort").find('span').addClass('glyphicon-chevron-up');
                }else{
                    $(".trailProduct-click-sort").find('span').addClass('glyphicon-chevron-down');
                }
            });
        })

        $('#productNameModel').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) // Button that triggered the modal
            var recipient = button.data('name') // Extract info from data-* attributes
            var product_id = button.data('id') // Extract info from data-* attributes
            var modal = $(this)
            modal.find('.modal-body input[name="product_name"]').val(recipient)
            modal.find('.modal-header input[name="product_id"]').val(product_id)
        });

        $("#agency tbody tr:first").addClass('success');

        $(document).on("click", "#agency tbody tr", function (event) {
            curr_agency_id = $(this).data('id');
            var orderNow;
            if(type == 0){
                orderNow = order.product;
            }else{
                orderNow = order.trailProduct;
            }
            $("#tab-content").load("/admin/product?order="+orderNow+"&agency_id=" + curr_agency_id + "&type=" + type + " #tab-content>div",function () {
                for(var key in order){
                    if(order[key] == 'asc'){
                        $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-up');
                    }else{
                        $("."+key+"-click-sort").find("span").addClass('glyphicon-chevron-down');
                    }
                }
            });
            $(this).addClass('success').siblings().removeClass('success');
        });

        // 输入框搜索
        $("#inputSearch").keypress(function (event) {
            if (event.keyCode == 13) {
                var agency_name = $(this).val();
                $("#agency").load("/admin/searchAgency?agency_name=" + agency_name + " #agency>*");
            }
        });
        /**
         * 添加经销商
         */
        $("#add_agency").click(function (event) {
            var agency_name = $("input[name='agencyName']").val();
            var agency_status = $("select[name='agencyStatus']").val();
            $.ajax({
                url: '/admin/addAgency',
                type: 'post',
                dataType: 'json',
                data: {
                    agency_name: agency_name,
                    agency_status: agency_status
                },
                success: function (res) {
                    if (res.res) {
                        location.reload();
                    }
                }
            })
        });
        /**
         * 修改商品或者试用品名称
         */
        $("#modify_product_name").click(function (event) {
            var product_name = $("input[name='product_name']").val();
            var product_id = $("input[name='product_id']").val()
            $.ajax({
                url: '/admin/modifyProductName',
                type: 'post',
                dataType: 'json',
                data: {
                    product_name: product_name,
                    product_id: product_id

                },
                success: function (res) {
                    if (res.res) {
                        location.reload();
                    }
                }
            })
        });

        /**
         * 跳转到上传页面
         */
        $(document).on("click", "#showAddTrailProduct,#showAddProduct", function () {
            var url = '/admin/showAddProduct?type_id=' + $(this).data('type');
            window.open(url);
        });

        /**
         * 删除商品
         */
        $(document).on("click", ".delete_product", function () {
            var that = this;
            layer.confirm('您确定删除该商品吗？', {
                btn: ['确定', '取消'] //按钮
            }, function () {
                var index = layer.load(1, {
                    shade: [0.1, '#fff'] //0.1透明度的白色背景
                });
                $.ajax({
                    url: '/admin/deleteProduct',
                    type: 'delete',
                    dataType: 'json',
                    data: {
                        product_id: $(that).data('id')
                    },
                    success: function (res) {
                        layer.closeAll('loading')
                        if (res.res) {
                            layer.msg(res.mes, {icon: 1}, function (e) {
                                $(that).parents("tr").remove();
                            });
                        }
                    },
                    error: function (err) {
                        layer.closeAll('loading')
                    }
                });
            }, function () {

            })
        })

    })
</script>
</body>

</html>